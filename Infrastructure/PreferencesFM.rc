#include "Resource.h"

#include <winres.h>
#include <commctrl.h>

language LANG_ENGLISH, SUBLANG_ENGLISH_US
#pragma code_page(1252)

#define W_A00    332 // Dialog width as set by foobar2000, in dialog units
#define H_A00    288 // Dialog height as set by foobar2000, in dialog units

#define H_LBL        8 // Label

#define W_BTN       50 // Button
#define H_BTN       14 // Button

#define H_EBX       12 // Edit box
#define H_CBX       14 // Combo box

#define W_CHB       10 // Check box
#define H_CHB       10 // Check box

#define DX           7
#define DY           7

#define IX           4 // Spacing between two related controls
#define IY           2

// Groupbox LibADLMIDI
#define X_B00    0
#define Y_B00    0
#define W_B00    281

    // Label: Bank
    #define X_B01    X_B00 +  5
    #define Y_B01    Y_B00 + 11
    #define W_B01    48
    #define H_B01    H_LBL

    // Combobox: Bank
    #define X_B02    X_B01 + W_B01 + IX
    #define Y_B02    Y_B01
    #define W_B02    W_B00 - 5 - W_B01 - IX - 5
    #define H_B02    H_CBX

    // Label: Emulator Core
    #define X_B03    X_B01
    #define Y_B03    Y_B02 + H_B02 + IY
    #define W_B03    W_B01
    #define H_B03    H_LBL

    // Combobox: Emulator Cores
    #define X_B04    X_B03 + W_B03 + IX
    #define Y_B04    Y_B03
    #define W_B04    W_B00 - 5 - W_B03 - IX - 5
    #define H_B04    H_CBX

    // Label: Chips
    #define X_B05    X_B03
    #define Y_B05    Y_B04 + H_B04 + IY
    #define W_B05    W_B03
    #define H_B05    H_LBL

    // Combobox: Chips
    #define X_B06    X_B05 + W_B05 + IX
    #define Y_B06    Y_B05
    #define W_B06    40
    #define H_B06    H_CBX

    // Checkbox: Enable soft panning
    #define X_B07    X_B05
    #define Y_B07    Y_B06 + H_B06 + IX
    #define W_B07    W_B00 - 5 - 5
    #define H_B07    H_CHB

    // Label: Bank File
    #define X_B08    X_B07
    #define Y_B08    Y_B07 + H_B07 + IY
    #define W_B08    W_B05
    #define H_B08    H_LBL

    // EditBox
    #define X_B09    X_B08 + W_B08 + IX
    #define Y_B09    Y_B08
    #define W_B09    200
    #define H_B09    H_EBX

    // Button
    #define X_B10    X_B09 + W_B09 + IX
    #define Y_B10    Y_B09
    #define W_B10    16
    #define H_B10    H_BTN

#define H_B00    11 + H_B02 + IY + H_B04 + IY + H_B06 + IY + H_B07 + IY + H_B09 + 7

// Groupbox LibOPNMIDI

#define X_C00    0
#define Y_C00    Y_B00 + H_B00
#define W_C00    281

    // Label: Bank
    #define X_C01    X_C00 +  5
    #define Y_C01    Y_C00 + 11
    #define W_C01    48
    #define H_C01    H_LBL

    // Combobox: Bank
    #define X_C02    X_C01 + W_C01 + IX
    #define Y_C02    Y_C01
    #define W_C02    W_C00 - 5 - W_C01 - IX - 5
    #define H_C02    H_CBX

    // Label: Emulator Core
    #define X_C03    X_C01
    #define Y_C03    Y_C02 + H_C02 + IY
    #define W_C03    W_C01
    #define H_C03    H_LBL

    // Combobox: Emulator Cores
    #define X_C04    X_C03 + W_C03 + IX
    #define Y_C04    Y_C03
    #define W_C04    W_C00 - 5 - W_C03 - IX - 5
    #define H_C04    H_CBX

    // Label: Chips
    #define X_C05    X_C03
    #define Y_C05    Y_C04 + H_C04 + IY
    #define W_C05    W_C03
    #define H_C05    H_LBL

    // Combobox: Chips
    #define X_C06    X_C05 + W_C05 + IX
    #define Y_C06    Y_C05
    #define W_C06    40
    #define H_C06    H_CBX

    // Checkbox: Enable soft panning
    #define X_C07    X_C05
    #define Y_C07    Y_C06 + H_C06 + IX
    #define W_C07    W_C00 - 5 - 5
    #define H_C07    H_CHB

#define H_C00    11 + H_C02 + IY + H_C04 + IY + H_C06 + IY + H_C07 + 7


// Groupbox LibMT32Emu

#define X_D00    0
#define Y_D00    Y_C00 + H_C00
#define W_D00    281

    // Label: Conversion Quality
    #define X_D01    X_D00 +  5
    #define Y_D01    Y_D00 + 11
    #define W_D01    64
    #define H_D01    H_LBL

    // Combobox: Conversion Quality
    #define X_D02    X_D01 + W_D01 + IX
    #define Y_D02    Y_D01
    #define W_D02    64
    #define H_D02    H_CBX

    // Label: Max. Partials
    #define X_D03    X_D02 + W_D02 + IX
    #define Y_D03    Y_D01
    #define W_D03    48
    #define H_D03    H_LBL

    // Combobox: Max. Partials
    #define X_D04    X_D03 + W_D03 + IX
    #define Y_D04    Y_D03
    #define W_D04    32
    #define H_D04    H_EBX

    // Label: Analog Output Mode
    #define X_D05    X_D01
    #define Y_D05    Y_D02 + H_D02 + IY
    #define W_D05    64
    #define H_D05    H_LBL

    // Combobox: Analog Output Mode
    #define X_D06    X_D05 + W_D05 + IX
    #define Y_D06    Y_D05
    #define W_D06    64
    #define H_D06    H_CBX

    // Label: GM Set
    #define X_D07    X_D06 + W_D06 + IX
    #define Y_D07    Y_D05
    #define W_D07    48
    #define H_D07    H_LBL

    // Combobox: GM Set
    #define X_D08    X_D07 + W_D07 + IX
    #define Y_D08    Y_D07
    #define W_D08    80
    #define H_D08    H_CBX

    // Label: DAC Input Mode
    #define X_D09    X_D05
    #define Y_D09    Y_D06 + H_D06 + IY
    #define W_D09    64
    #define H_D09    H_LBL

    // Combobox: DAC Input Mode
    #define X_D10    X_D09 + W_D09 + IX
    #define Y_D10    Y_D09
    #define W_D10    64
    #define H_D10    H_CBX

    // Checkbox Nice Amp Ramp
    #define X_D11    X_D09
    #define Y_D11    Y_D10 + H_D10 + IY
    #define W_D11    64
    #define H_D11    H_CHB

    // Checkbox Nice Panning
    #define X_D12    X_D11 + W_D11 + IX
    #define Y_D12    Y_D11
    #define W_D12    56
    #define H_D12    H_CHB

    // Checkbox Nice Partial Mixing
    #define X_D13    X_D12 + W_D12 + IX
    #define Y_D13    Y_D12
    #define W_D13    68
    #define H_D13    H_CHB

    // Checkbox Reverse Stereo
    #define X_D14    X_D13 + W_D13 + IX
    #define Y_D14    Y_D13
    #define W_D14    64
    #define H_D14    H_CHB

#define H_D00    11 + H_D02 + IY + H_D06 + IY + H_D10 + IY + H_D11 + 7

IDD_PREFERENCES_FM dialogex 0, 0, 0, 0
style DS_SHELLFONT | WS_CHILD
font 8, "MS Shell Dlg", 400, 0, 1
{
    groupbox "LibADLMIDI", IDC_STATIC, X_B00, Y_B00, W_B00, H_B00
        rtext       "Bank:",                IDC_ADL_BANK_TEXT,  X_B01, Y_B01 + 2, W_B01, H_B01
        combobox                            IDC_ADL_BANK,       X_B02, Y_B02,     W_B02, H_B02, CBS_DROPDOWNLIST | WS_VSCROLL | WS_TABSTOP
        rtext       "Emulator Core:",       IDC_ADL_CORE_TEXT,  X_B03, Y_B03 + 2, W_B03, H_B03
        combobox                            IDC_ADL_CORE,       X_B04, Y_B04,     W_B04, H_B04, CBS_DROPDOWNLIST | WS_VSCROLL | WS_TABSTOP
        rtext       "Chips:",               IDC_ADL_CHIPS_TEXT, X_B05, Y_B05 + 2, W_B05, H_B05
        combobox                            IDC_ADL_CHIPS,      X_B06, Y_B06,     W_B06, H_B06, CBS_DROPDOWN | WS_VSCROLL | WS_TABSTOP

        control     "Enable soft panning",  IDC_ADL_SOFT_PANNING, "Button", BS_AUTOCHECKBOX | WS_TABSTOP, X_B07, Y_B07, W_B07, H_B07

        rtext       "Bank File:",           IDC_ADL_BANK_FILE_PATH_TEXT,    X_B08, Y_B08 + 2, W_B08, H_B08
        edittext                            IDC_ADL_BANK_FILE_PATH,         X_B09, Y_B09,     W_B09, H_B09, ES_AUTOHSCROLL
        pushbutton  "...",                  IDC_ADL_BANK_FILE_PATH_SELECT,  X_B10, Y_B10,     W_B10, H_B10

    groupbox "LibOPNMIDI", IDC_STATIC, X_C00, Y_C00, W_C00, H_C00
        rtext       "Bank:",                IDC_OPN_BANK_TEXT,  X_C01, Y_C01 + 2, W_C01, H_C01
        combobox                            IDC_OPN_BANK,       X_C02, Y_C02,     W_C02, H_C02, CBS_DROPDOWNLIST | WS_VSCROLL | WS_TABSTOP
        rtext       "Emulator Core:",       IDC_OPN_CORE_TEXT,  X_C03, Y_C03 + 2, W_C03, H_C03
        combobox                            IDC_OPN_CORE,       X_C04, Y_C04,     W_C04, H_C04, CBS_DROPDOWNLIST | WS_VSCROLL | WS_TABSTOP
        rtext       "Chips:",               IDC_OPN_CHIPS_TEXT, X_C05, Y_C05 + 2, W_C05, H_C05
        combobox                            IDC_OPN_CHIPS,      X_C06, Y_C06,     W_C06, H_C06, CBS_DROPDOWN | WS_VSCROLL | WS_TABSTOP

        control     "Enable soft panning",  IDC_OPN_SOFT_PANNING, "Button", BS_AUTOCHECKBOX | WS_TABSTOP, X_C07, Y_C07, W_C07, H_C07

    groupbox "MT32Emu (Munt)", IDC_STATIC, X_D00, Y_D00, W_D00, H_D00
        rtext       "Conversion Quality:"   IDC_MT32_CONVERSION_QUALITY_TEXT,   X_D01, Y_D01 + 2, W_D01, H_D01
        combobox                            IDC_MT32_CONVERSION_QUALITY,        X_D02, Y_D02,     W_D02, H_D02, CBS_DROPDOWNLIST | WS_VSCROLL | WS_TABSTOP
        rtext       "Max. Partials:",       IDC_MT32_MAX_PARTIALS_TEXT,         X_D03, Y_D03 + 2, W_D03, H_D03
        edittext                            IDC_MT32_MAX_PARTIALS,              X_D04, Y_D04,     W_D04, H_D04, ES_RIGHT | ES_AUTOHSCROLL | WS_TABSTOP
        rtext       "Analog Output Mode:"   IDC_MT32_ANALOG_OUTPUT_MODE_TEXT,   X_D05, Y_D05 + 2, W_D05, H_D05
        combobox                            IDC_MT32_ANALOG_OUTPUT_MODE,        X_D06, Y_D06,     W_D06, H_D06, CBS_DROPDOWNLIST | WS_VSCROLL | WS_TABSTOP
        rtext       "GM Set:",              IDC_MT32_GM_SET_TEXT,               X_D07, Y_D07 + 2, W_D07, H_D07
        combobox                            IDC_MT32_GM_SET,                    X_D08, Y_D08,     W_D08, H_D08, CBS_DROPDOWNLIST | WS_VSCROLL | WS_TABSTOP
        rtext       "DAC Input Mode:"       IDC_MT32_DAC_INPUT_MODE_TEXT,       X_D09, Y_D09 + 2, W_D09, H_D09
        combobox                            IDC_MT32_DAC_INPUT_MODE,            X_D10, Y_D10,     W_D10, H_D10, CBS_DROPDOWNLIST | WS_VSCROLL | WS_TABSTOP

        control     "Nice Amp Ramp",        IDC_MT32_NICE_AMP_RAMP,             "Button", BS_AUTOCHECKBOX | WS_TABSTOP, X_D11, Y_D11, W_D11, H_D11
        control     "Nice Panning",         IDC_MT32_NICE_PANNING,              "Button", BS_AUTOCHECKBOX | WS_TABSTOP, X_D12, Y_D12, W_D12, H_D12
        control     "Nice Partial Mixing",  IDC_MT32_NICE_PARTIAL_MIXING,       "Button", BS_AUTOCHECKBOX | WS_TABSTOP, X_D13, Y_D13, W_D13, H_D13
        control     "Reverse Stereo",       IDC_MT32_REVERSE_STEREO,            "Button", BS_AUTOCHECKBOX | WS_TABSTOP, X_D14, Y_D14, W_D14, H_D14
}
