    #define Y_A13    Y_A12 + H_A12 + IY
    #define W_A13    W_A11
    #define H_A13    H_LBL

    // Combobox: Resampling
    #define X_A14    X_A13 + W_A13 + IX
    #define Y_A14    Y_A13
    #define W_A14    W_A10 - 5 - W_A13 - IX - 5
