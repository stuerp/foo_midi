    #define Y_D09    Y_D06 + H_D06 + IY
    #define W_D09    64
    #define H_D09    H_LBL

    // Combobox: DAC Input Mode
    #define X_D10    X_D09 + W_D09 + IX
    #define Y_D10    Y_D09
    #define W_D10    64
    #define H_D10    H_CBX

    // Checkbox Reverb
