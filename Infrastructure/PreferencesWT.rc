    #define Y_A19    Y_A18
    #define W_A19    W_A10 - 5 - W_A18 - IX - 5
    #define H_A19    H_LBL

#define H_A10    11 + H_A12 + IY + H_A14 + IY + H_A16 + IY + H_A17 + IY + H_A19 + 7

#pragma endregion

